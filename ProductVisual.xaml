<UserControl x:Class="WpfApp3.ProductVisual"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp3"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800" BorderBrush="Black" BorderThickness="1" Background="White" Margin="2">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="ProductImage" Grid.Column="0" Margin="5"/>
        <Label x:Name="ProductNameLabel" Grid.Column="1" Margin="5"/>
        <Label x:Name="ProductPriceLabel" Grid.Column="2" Margin="5"/>
        <Button x:Name="ProductAddButton" Content="Добавить в корзину" Click="ProductAddButton_Click" Grid.Column="3" Margin="5"/>
    </Grid>
</UserControl>
